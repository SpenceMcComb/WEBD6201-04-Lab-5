<!-- Top Components -->
<%- include ./partials/head.ejs %>
<%- include ./partials/header.ejs %>


<!-- Content Area -->
<main class="container" id="mainContent">

<!-- Includes the appropriate ejs view based on the current page title -->
<% if (title == 'Home') { %>
    <%- include ./content/home.ejs %>

<% } else if(title == 'Projects') { %>
    <%- include ./content/projects.ejs %>

<% } else if(title == 'Services') { %>
    <%- include ./content/services.ejs %>

<% } else if(title == 'About') { %>
    <%- include ./content/about.ejs %>

<% } else if(title == 'Contact') { %>
    <%- include ./content/contact.ejs %>

<% } else if(title == 'Login') { %>
    <%- include ./content/login.ejs %>

<% } else if(title == 'Update') { %>
    <%- include ./content/update.ejs %>
<% } %>

</main> 

<!-- Bottom components -->
<%- include ./partials/scripts.ejs %>
<%- include ./partials/footer.ejs %>
<%- include ./partials/bottom.ejs %>